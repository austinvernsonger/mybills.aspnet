@model MyBills.Models.Bill

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Bill</legend>

    <div class="display-label">@Html.LabelFor(model => Model.BillDate)</div>
    <div class="display-field">@String.Format("{0:g}", Model.BillDate)</div>

    <div class="display-label">@Html.LabelFor(model => Model.VendorName)</div>
    <div class="display-field">@String.Format("{0:g}", Model.VendorName)</div>

    <div class="display-label">@Html.LabelFor(model => Model.ReceivedDate)</div>
    <div class="display-field">@String.Format("{0:g}", Model.ReceivedDate)</div>

    <div class="display-label">@Html.LabelFor(model => Model.DueDate)</div>
    <div class="display-field">@String.Format("{0:g}", Model.DueDate)</div>

    <div class="display-label">@Html.LabelFor(model => Model.Amount)</div>
    <div class="display-field">@String.Format("{0:c}", Model.Amount)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

